
@model Course

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}




<div class="container">
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            @if (Model.Image != null)
            {
                <img src="~/Assets/img/course/@Model.Image" style="width:100px;height:100px" />
            }
            <br />
            @* For Naming Label *@
            <label asp-for="Photo"></label>
            <input class="form-control" asp-for="Photo" style="width:350px;">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Header"></label>
            <input class="form-control" asp-for="Header" style="width:350px;">
            <span class="text-danger" asp-validation-for="Header" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="Text"></label>
            <textarea class="form-control" asp-for="Text" style="width:350px;"></textarea>
            <span class="text-danger" asp-validation-for="Text" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="HeaderAbout"></label>
            <input class="form-control" asp-for="HeaderAbout" style="width:350px;">
            <span class="text-danger" asp-validation-for="HeaderAbout" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="TextAbout"></label>
            <textarea class="form-control" asp-for="TextAbout" style="width:350px;"></textarea>
            <span class="text-danger" asp-validation-for="TextAbout" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="HeaderCertification"></label>
            <input class="form-control" asp-for="HeaderCertification" style="width:350px;">
            <span class="text-danger" asp-validation-for="HeaderCertification" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="TextCertification"></label>
            <textarea class="form-control" asp-for="TextCertification" style="width:350px;"></textarea>
            <span class="text-danger" asp-validation-for="TextCertification" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="HeadeReply"></label>
            <input class="form-control" asp-for="HeadeReply" style="width:350px;">
            <span class="text-danger" asp-validation-for="HeadeReply" type="text"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="TextReply"></label>
            <textarea class="form-control" asp-for="TextReply" style="width:350px;"></textarea>
            <span class="text-danger" asp-validation-for="TextReply" type="text"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
            <span class="text-danger" asp-validation-for="CategoryId"></span>
        </div>
        <div class="form-group">
            @* For Naming Label *@
            <label asp-for="CourseFee"></label>
            <input class="form-control" asp-for="CourseFee" style="width:350px;">
            <span class="text-danger" asp-validation-for="CourseFee" type="text"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>