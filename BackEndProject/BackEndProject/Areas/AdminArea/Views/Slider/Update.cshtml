
@model Slider

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}




<div class="container">
    <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="form-group">
            @if (Model.Image != null)
            {
                <img src="~/Assets/img/slider/@Model.Image" style="width:100px;height:100px" />
            }
            <br />
            @* For Naming Label *@
            <label asp-for="Photos"></label>
            <input class="form-control" asp-for="Photos" style="width:350px;">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        <div class="form-group">
            <label asp-for="Header"></label>
            <input class="form-control" asp-for="Header" style="width:350px;">
            <span class="text-danger" asp-validation-for="Header"></span>
        </div>
        <div class="form-group">
            <label asp-for="InnerText"></label>
            <input class="form-control" asp-for="InnerText" style="width:350px;">
            <span class="text-danger" asp-validation-for="InnerText"></span>
        </div>

        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

