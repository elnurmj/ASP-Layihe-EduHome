@model Slider
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="form-group">

        @if (Model.Image != null)
        {
            <img src="~/Assets/img/slider/@Model.Image" style="width:100px;height:100px" />
        }
    </div>
    <div class="form-group">
        <label asp-for="Header"></label><br />
        <input class="form-control" asp-for="Header" style="width:350px;"><br />
        <span class="text-danger" asp-validation-for="Header"></span>
    </div>
    <div class="form-group">
        <label asp-for="InnerText"></label> <br />
        <input class="form-control" asp-for="InnerText" style="width:350px;"><br />
        <span class="text-danger" asp-validation-for="InnerText"></span>
    </div>
    <div style="width:300px;">

        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</div>
