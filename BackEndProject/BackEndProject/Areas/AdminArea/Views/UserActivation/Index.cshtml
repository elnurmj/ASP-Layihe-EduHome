@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}

<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h1>Users</h1>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            User Name
                        </th>
                        <th>
                            User Mail
                        </th>
                        <th>
                            IsActive
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            @if (user.IsActivated)
                            {
                                if (user.IsSubscribed)
                                {
                                    <td>
                                        <h4 style="color:#0026ff !important">@user.FullName</h4>
                                    </td>
                                    <td>
                                        <h4 style="color: #0026ff">  @user.Email  </h4>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <h4 style="color:#4cff00">@user.FullName</h4>
                                    </td>
                                    <td>
                                        <h4 style="color:#4cff00">  @user.Email  </h4>
                                    </td>
                                }

                            }
                            else
                            {
                                <td>
                                    <h4 style="color:#ff0000">@user.FullName</h4>
                                </td>
                                <td>
                                    <h4 style="color:#ff0000">  @user.Email  </h4>
                                </td>
                            }

                            <td>
                                <form method="post" asp-action="Active" asp-route-id="@user.Id" style="display:inline-block">


                                    <button class="btn btn-primary btn-sm" type="submit">
                                        Active
                                    </button>
                                </form>
                                <form method="post" asp-action="DeActive" asp-route-id="@user.Id" style="display:inline-block">


                                    <button class="btn btn-danger btn-sm" type="submit">
                                        DeActive
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



