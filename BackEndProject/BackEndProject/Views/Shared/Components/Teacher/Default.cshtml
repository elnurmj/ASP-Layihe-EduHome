@model TeacherViewModel

<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.TeacherSkil.Datas)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="Detail" asp-action="TeacherDetail" asp-route-id="@item.Teacher.Id"><img src="~/Assets/img/teacher/@item.Teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a href="teacher-details.html">@item.Teacher.Name</a></h2>
                            <h4>Associate Professor</h4>
                            <ul>
                                <li><a href="@item.Teacher.Facebook.FirstOrDefault()"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="@item.Teacher.Vimeo.FirstOrDefault()"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="@item.Teacher.Twitter.FirstOrDefault()"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="@item.Teacher.Pinterest.FirstOrDefault()"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="pagination">
                    <ul>
                        @if (Model.Take == null)
                        {
                            @for (int i = 1; i <= Model.TeacherSkil.TotalPage; i++)
                            {
                                <li class="page-item @(i==Model.TeacherSkil.CurrentPage ? "disabled" : "")">
                                    <a class="page-link" asp-controller="Teacher" asp-action="Index" asp-route-page="@i">@i</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>