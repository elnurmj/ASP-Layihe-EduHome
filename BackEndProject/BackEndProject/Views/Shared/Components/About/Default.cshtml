@model AboutArea

<div class="about-area pb-155">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@Html.Raw(Model.Header)</h2>
                    <p>@Model.Text</p>
                    <p class="hidden-sm">@Model.TextSecond</p>
                    <a class="default-btn" asp-controller="About" asp-action="Index">view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/Assets/img/about/@Model.Image" alt="about">
                </div>
            </div>
        </div>
    </div>
</div>